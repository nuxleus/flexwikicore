<?xml version="1.0" encoding="utf-8" ?>
<Grammar>
  <CharSet Name="LineChar" Value="[_] - [\n,\r]"/>
  
  <Rule Name="Document">
    <ZeroOrMore>
      <CallRule Name="NewLine"/>
      <CallRule Name="Paragraph"/>
    </ZeroOrMore>
  </Rule>
  
  <Rule Name="Paragraph">
    <LineStart/>
    <OneOrMore>
      <MatchSet Name="LineChar"/>
    </OneOrMore>
    <LineEnd/>
  </Rule>
  
  <Rule Name="NewLine">
    <ZeroOrMore>
      <Choice>
        <Match Text="\r\n"/>
        <Match Text="\n"/>
        <Match Text="\r"/>
      </Choice>
    </ZeroOrMore>
  </Rule>
</Grammar>